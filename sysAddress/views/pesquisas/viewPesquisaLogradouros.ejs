<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Logradouros</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/stylePesquisaLogradouros.css">
</head>
<body>

<div class="modal fade" data-backdrop="static" id="modalLogradouros" tabindex="-1" role="dialog" aria-labelledby="modalLogradourosLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLogradourosLabel">LOGRADOUROS - PESQUISA</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-bordered table-hover table-striped" id="LogradouroTable">
          <thead class="thead-dark">
            <tr>
              <th id="idLogradouro" scope="col">CÓDIGO</th>
              <th scope="col">DESCRIÇÃO</th>
              <th scope="col">ABREVIATURA</th>
              <th id="lograInativo" scope="col">INATIVO</th>
              <th scope="col" class="acoes-col">AÇÕES</th>
            </tr>
          </thead>
          <tbody id="gridLogradouros">
            <!-- Os registros serão carregados aqui -->
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" id="btnAnterior" disabled>ANTERIOR</button>
        <button type="button" class="btn btn-info" id="btnProximo">PRÓXIMO</button>
        <button type="button" class="btn btn-primary">INSERIR LOGRADOURO</button>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="javascript/scriptsUtils.js"></script>
<script src="javascript/scriptsPesquisaLogradouros.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const logradouros = <%- JSON.stringify(logradouros) %>;

    iniciaVariaveis(logradouros);
    displayPage(1);
  });
</script>

</body>
</html>
