<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estados Civis</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/cadastros/styleCadastroEstadosCivis.css">
</head>

<body>
    <div class="modal fade" data-backdrop="static" id="modalCadastroEstadoCivil" tabindex="-1" role="dialog"
        aria-labelledby="modalCadastroEstadoCivil" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCadastroEstadoCivilLabel">ESTADOS CIVIS - CONSULTA</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form id="formCadastroEstadoCivil" novalidate>
                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label for="edtIdEstadoCivil">CÓDIGO</label>
                                <input type="text" class="form-control" id="edtIdEstadoCivil" name="edtIdEstadoCivil"
                                    maxlength="5" disabled>
                            </div>
                            <div class="form-group col-md-10">
                                <label for="edtDescricaoEstadoCivil">DESCRIÇÃO</label>
                                <input type="text" class="form-control" id="edtDescricaoEstadoCivil"
                                    name="edtDescricaoEstadoCivil" maxlength="25" disabled>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" id="btnInserir" class="btn btn-info" data-dismiss="modal">INSERIR</button>
                    <button type="button" id="btnAlterar" class="btn btn-info" data-dismiss="modal">ALTERAR</button>
                    <button type="button" id="btnExcluir" class="btn btn-info" data-dismiss="modal">EXCLUIR</button>
                    <button type="button" id="btnSalvar" class="btn btn-primary" id="salvarTipoEndereco"
                        disabled>SALVAR</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="javascript/common/scriptsUtils.js"></script>
    <script src="javascript/cadastros/scriptsCadastroEstadosCivis.js"></script>
    <script>
        let opcaoSel;
        
        document.addEventListener('DOMContentLoaded', function () {                  
          const dadosEstadoCivil = <%- JSON.stringify(dadosEstadoCivil) %>;
          opcaoSel               = dadosEstadoCivil.opcaoSel;
          console.log(dadosEstadoCivil);
          habilitaDesabilitaBotoes(opcaoSel);
          habilitaDesabilitaCampos(opcaoSel);

          if ((opcaoSel === 'I') || (opcaoSel === 'A')) {
            $('#modalCadastroEstadoCivil').on('shown.bs.modal', function () {
                document.getElementById('edtDescricaoEstadoCivil').focus();
            });
          };

          if ((opcaoSel === 'A') || (opcaoSel === 'C')) {
            carregaDados(dadosEstadoCivil);
          };
        });
    </script>
</body>

</html>